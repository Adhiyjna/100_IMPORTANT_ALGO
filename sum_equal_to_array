#include <iostream>

using namespace std;

int main()
{
    int n,i;
    cout<<"enter the no of elements";
    cin>>n;
    int a[n];
    for(i=0;i<n;i++)
    {
        cin>>a[i];
    }
    int flag=0;
    int x;
    cout<<"enter the sum";
    cin>>x;
    i=0;int j=n-1;
    while(i<j)
    {
        if(a[i]+a[j]==x)   
            {
                cout<<a[i]<<a[j];
                break;
            }
        else if(a[i]+a[j]<x)
        {
            i++;
        }
        else
        {
            j--;
        }
    }
   
    
}
