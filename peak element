#include<bits/stdc++.h>
using namespace std;
int main()
{
    int i,n,a[10];
    int sum=0;
    cout<<"enter the number of elements";
    cin>>n;
    
   for( i=0;i<n;i++)
    {
       cin>>a[i];
    }
  
  for(i=0;i<n;i++)
  {
      if(a[i]>a[i+1]&&a[i]>a[i-1])
      {
          cout<<"peak element"<<a[i];
      }
  }
    
   
}
